    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-json": "^1.0.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "ts-node": "10.9.2",
    "tsc-watch": "^6.2.1",
    "typescript": "5.8.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/node": "^22.13.9",
    "prisma": "^6.4.1"
